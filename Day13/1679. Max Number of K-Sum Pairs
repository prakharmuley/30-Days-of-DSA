Problem Link: https://leetcode.com/problems/max-number-of-k-sum-pairs/



class Solution {
    public int maxOperations(int[] a, int k) {
        Arrays.sort(a);
        int l=0,r=a.length-1;
        int ans=0;
        while(l<r)
        {
            if((long)a[l]+(long)a[r]<(long)k) l++;
            else if((long)a[l]+(long)a[r]>(long)k) r--;
            else
            {
                l++;
                r--;
                ans++;
                
            }
        }
        return ans;
    }
}
